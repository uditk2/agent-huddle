{
  "name": "webrtc-terminal-mcp",
  "version": "0.1.0",
  "description": "MCP server with passkey-gated one-time WebRTC terminal access",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "webrtc-terminal-mcp": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "check": "node --check src/index.js && node --check scripts/manual_signaling_utils.js && node --check scripts/manual_offer_client.js && node --check scripts/manual_answer_server.js && node --check scripts/hosted_pair_client.js",
    "connect:a": "node scripts/manual_offer_client.js",
    "connect:b": "node scripts/manual_answer_server.js",
    "pair": "node scripts/hosted_pair_client.js --role auto",
    "pair:a": "node scripts/hosted_pair_client.js --role machine_a",
    "pair:b": "node scripts/hosted_pair_client.js --role machine_b",
    "manual:offer": "node scripts/manual_offer_client.js",
    "manual:answer": "node scripts/manual_answer_server.js"
  },
  "keywords": [
    "mcp",
    "webrtc",
    "terminal",
    "passkey"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@roamhq/wrtc": "^0.9.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "node-pty": "^1.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  }
}
